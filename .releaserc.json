{
  "branches": ["master", { "name": "development", "prerelease": "d" }],
  "verifyConditions": [
    "@semantic-release/changelog",
    "@semantic-release/git",
    {
      "path": "semantic-release-docker",
      "registryUrl": "docker.pkg.github.com"
    }
  ],
  "prepare": [
    "@semantic-release/changelog",
    "@semantic-release/npm",
    {
      "path": "@semantic-release/exec",
      "cmd": "docker build -t docker.pkg.github.com/alexanderbabel/nello-backend/nello-backend ."
    },
    {
      "path": "@semantic-release/git",
      "assets": ["CHANGELOG.md", "package.json", "yarn.lock"]
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/github",
    [
      "semantic-release-docker",
      {
        "name": "docker.pkg.github.com/alexanderbabel/nello-backend/nello-backend"
      }
    ]
  ]
}
